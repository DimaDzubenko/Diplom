@model Diplom.Models.ViewModels.Blog.PostListViewModel
@{
    Layout = "~/Views/Shared/_LayoutSecond.cshtml";
    ViewData["Title"] = "Blog / News";
}

<section id="main" class="site-main shop-grid-full grid-col-3">
    <h2 class="none">Main</h2>
    <div class="engo-breadscrumb overlayo">
        <div class="container">
            <div class="row">
                <ol class="breadcrumb ">
                    <li class="home"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>
                        <a asp-controller="Blog" asp-action="Index">News / Blog</a>
                    </li>
                    <li>News / Blog</li>
                </ol>
            </div>
        </div>
    </div>
    <section id="main-container" class="container">
        <div class="row">
            <div id="main-content" class="main-content">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="products products-grid">
                        <div class="row">

                            @foreach (var item in Model.Posts)
                            {

                                <div class="col-md-3 col-sm-4 col-xs-6 col-mb-12 col-lg-4">
                                    <div class="product engo-product-grid">
                                        <div class="blog-content-v4">
                                            <a class="image" asp-area="" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                                @if (@item.Image != null)
                                                {
                                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" alt="blog" class="img-responsive center-block">
                                                }
                                                else
                                                {
                                                    <img src="~/images/blog/blog-v2/item1.jpg" alt="blog" class="img-responsive center-block">
                                                }
                                            </a>
                                            <h3 class="name-blog">
                                                <a asp-area="" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                                    <span>@item.Title</span>
                                                </a>
                                            </h3>
                                            <div class="entry-meta">
                                                <div class="entry-date-entry-account">
                                                    <span><i class="fa fa-clock-o"></i> @item.Created</span>
                                                </div>
                                            </div>
                                            <div class="des">
                                                @item.Discription
                                            </div>
                                            <a class="readmore" asp-area="" asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id">
                                                <span>Read more</span>
                                                <i class="fa fa-long-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="clearfix col-md-12 col-sm-12 col-xs-12">
                    <div class="toolbar products-bottom-toolbar clearfix">
                        <page-link page-model="Model.PageViewModel"
                                   page-action="Index"
                                   page-classes-enable="true"
                                   page-class="btn btn-light" page-class-normal="btn-light"
                                   page-class-selected="btn-light"
                                   class="btn-group disabled">
                        </page-link>
                    </div>
                </div>


            </div>
        </div>
    </section>
</section>  