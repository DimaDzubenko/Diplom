@model Diplom.Models.ViewModels.Account.RegisterViewModel
LinenShop.ViewModelsWEB.RegisterViewModel

<h3>Регистрация нового пользователя</h3>



<section id="main" class="site-main site-login">
    <div class="engo-breadscrumb overlayo">
        <div class="container">
            <div class="row">
                <ol class="breadcrumb ">
                    <li class="home"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>
                        <a href="login.html">Register</a>
                    </li>
                    <li>Register</li>
                </ol>
            </div>
        </div>
    </div>
    <div id="main-container" class="container">
        <div class="row">
            <div class="col-md-3 col-sm-3">
            </div>

            <div class="col-md-6 col-sm-6">
                <div class="register">
                    <h2 class="heading-title">Create a new account</h2>
                    <p>Create your own Rimbus account.</p>

                    <form method="post" asp-controller="Account" asp-action="Register">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div>
                            <label asp-for="Email">Email Address *</label><br />
                            <input asp-for="Email" class="input-text" placeholder="Your email" required />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div>
                            <label asp-for="Password"></label><br />
                            <input asp-for="Password" />
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div>
                            <label asp-for="PasswordConfirm"></label><br />
                            <input asp-for="PasswordConfirm" />
                            <span asp-validation-for="PasswordConfirm"></span>
                        </div>
                        <div>
                            <input type="submit" class="input-submit" value="Sign up" />
                        </div>
                    </form>

                </div>
            </div>

            <div class="col-md-3 col-sm-3">
            </div>
        </div>
    </div>
</section>