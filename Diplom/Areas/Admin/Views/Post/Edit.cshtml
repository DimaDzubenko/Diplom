@model Diplom.Models.ViewModels.Blog.PostViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>PostViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @if (ViewBag.Image != null)
        {
            <div>
                <img class="img-responsive img-rounded center-block" src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" style="height: 200px" />
            </div>
        }
        else
        {
            <img src="~/images/product/product.jpg" alt="" class="img-responsive center-block" style="height: 200px">
        }
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div id="upload_button">
                    <label>
                        <input name="Image" type="file" class="form-control">
                        @*<span class="btn btn-primary">Add new image for product</span>*@
                    </label>
                </div>
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

