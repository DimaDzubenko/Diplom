@model Diplom.Models.ViewModels.Blog.PostListViewModel

@{
    ViewData["Title"] = "Posts";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Posts) 
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Discription</td>
                <td>@item.Created</td>
                <td>
                    @if (@item.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" alt="" class="img-responsive center-block" style="width: 200px">
                    }
                    else
                    {
                        <img src="~/images/product/product.jpg" alt="" class="img-responsive center-block">
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
