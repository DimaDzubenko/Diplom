            <div class="form-group">
                <select asp-for="PentieName" class="form-control" asp-items="ViewBag.PentieId"></select>
                <span asp-validation-for="PentieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ColorName" class="form-control" asp-items="ViewBag.PColorId"></select>
                <span asp-validation-for="ColorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

