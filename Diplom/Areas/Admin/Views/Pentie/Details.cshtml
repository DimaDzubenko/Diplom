@model Diplom.Models.ViewModels.Shop.Pentie.PentieViewModel

@{
    ViewData["Title"] = "Details of product";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <h2>@ViewData["Title"]</h2>

            <a asp-action="Edit" asp-route-id="@Model.PentieId">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
        <div class="col-6">
            @if (ViewBag.Image != null)
            {
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.Image))" alt="" style="height: 500px">
            }
            else
            {
                <img src="~/images/product/product.jpg" alt="" style="height: 500px">
            }
        </div>
        <div class="col-6">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.PentieId)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PentieId)
                </dd>
                @* ------------------------------------------------------------- *@
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                @* ------------------------------------------------------------- *@
                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
                @* ------------------------------------------------------------- *@
                <dt>
                    @Html.DisplayNameFor(model => model.Discription)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Discription)
                </dd>
                @* ------------------------------------------------------------- *@
                <dt>
                    @Html.DisplayNameFor(model => model.PCategoryName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PCategoryName)
                </dd>
                @* ------------------------------------------------------------- *@
                <dt>
                    @Html.DisplayNameFor(model => model.PBrandName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.PBrandName)
                </dd>               
            </dl>

        </div>
    </div>
</div>