@model Diplom.Models.ViewModels.Shop.Pentie.PentieViewModel
@{
    ViewData["Title"] = "Delete the product";
}

<h2>@ViewData["Title"]</h2>
<hr />
<h3 style="color:red;">Are you sure want to delete <span style="color:black;">@Model.Name</span> ?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Discription)
            </dt>
            <dd>
                <div class="text-justify">
                    @Html.DisplayFor(model => model.Discription)
                </div>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PCategoryName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PCategoryName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PBrandName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PBrandName)
            </dd>            
        </dl>
    </div>
    <div class="col-md-6 text-center">
        @if (ViewBag.Image != null)
        {
            <img class="image-fluid" style='max-width:50%; height:auto;' src="data:image/jpeg;base64,@(Convert.ToBase64String(@ViewBag.Image))" />
        }
        else
        {
            <img src="~/images/product/product.jpg" alt="" style="height: 400px">
        }
    </div>
</div>
<hr />
<form asp-action="Delete">
    <input type="hidden" asp-for="PentieId" />
    <input type="submit" value="Delete the product" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-primary">Back to Products</a>
</form>
