@model Diplom.Models.ViewModels.Identity.UserViewModels.CreateUserViewModel


@{
    ViewData["Title"] = "Create user";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
