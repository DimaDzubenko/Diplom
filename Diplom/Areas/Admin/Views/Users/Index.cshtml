@model IEnumerable<Diplom.Models.DataModel.Identity.User>

@{
    ViewBag.Title = "Список пользователей";
}
<h3>@ViewBag.Title</h3>
<a asp-action="Create">Добавить пользователя</a>
<table class="table">
    <tr>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Birthday</th>
        @*<th>Image</th>*@
        <th></th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Birthday</td>
            @*<td>
                @if (user.Image != null)
                {
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(user.Image))" alt="" style="height: 200px">
                }
                else
                {
                    <img src="~/images/product/product.jpg" alt="" style="height: 200px">
                }
            </td>*@
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>